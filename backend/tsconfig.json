{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],
    "outDir": "dist",
    "resolveJsonModule": true,
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
